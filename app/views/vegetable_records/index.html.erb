<div class="container px-5 px-sm-0" >
      <div class="row">
        <div class="col-md-3">
<p id="notice"><%= notice %></p>
<h2>User info</h2>
          <!--<img class=と入力する-->
         <table class= "table">
            <tbody>
              <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th><%= link_to edit_user_path(current_user) ,class: "btn btn-outline-secondary btn-block fas fa-user-cog" do %>
              <% end %></th>
              </tr>
            </tbody>
          </table>
          </div>
          
          <div class="col-md-6 offset-md-1">
<h1>栽培管理一覧</h1>

<table>
  <thead>
    <tr>
      <th>品目</th>
      <th>品種</th>
      <th>播種日</th>
      <th>収穫見込み</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @vegetable_records.each do |vegetable_record| %>
      <tr>
        <td><%= vegetable_record.name %></td>
        <td><%= vegetable_record.varaiety %></td>
        <td><%= vegetable_record.date %></td>
        <td><%= vegetable_record.date %>日から</td>
        <td><%= link_to '詳細', vegetable_record %></td>
        <td><%= link_to '編集', edit_vegetable_record_path(vegetable_record) %></td>
        <td><%= link_to '削除', vegetable_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="col-md-2">
<%= link_to '新規投稿画面へ', new_vegetable_record_path %>
